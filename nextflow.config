profiles {
    standard {
        process.executor = 'local'
    }
    cluster {
        process {
            executor = 'slurm'
            withName: 'FASTQC' {
                module = 'fastqc/0.11.9'
            }
            withName: 'MULTIQC' {
                module = 'multiqc/1.9'
            }
            withName: 'TRIMMING' {
                module = 'python-gcc7/3.6.8:cutadapt-gcc/2.5:pigz-gcc/2.3.3:trimgalore/0.6.3'
            }
            withName: 'INDEXING' {
                module = 'hisat-gcc/2.1.0'
            }
            withName: 'ALIGNMENT' {
                module = 'hisat-gcc/2.1.0:samtools-gcc7/1.9'
            }
        }
    }
}